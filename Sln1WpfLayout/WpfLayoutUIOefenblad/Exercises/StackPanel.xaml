<Page x:Class="WpfLayoutUIOefenblad.Exercises.StackPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfLayoutUIOefenblad.Exercises"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="StackPanel">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="250px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="fraAssignment" Grid.Row="0" Grid.Column="0" Background="#eeeeee" />
        <Border Background="#EEEFFD" BorderBrush="#6B6CB0" BorderThickness="1" Padding="12" Margin="20" Grid.Row="1">
            <!-- TODO: PAS HIERONDER DE XAML AAN -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140" MaxWidth="500"/>
                    <ColumnDefinition Width="*" MaxWidth="500"/>
                </Grid.ColumnDefinitions>
            
            <StackPanel Orientation="Vertical" Grid.Column="0">
                <Label Padding="5,0" Margin="0,0,0,10" FontWeight="Bold">Postcode:</Label>
                    <TextBox BorderBrush="LightBlue" Height="30" VerticalContentAlignment="Center"></TextBox>
                    <TextBlock Text="#666" FontStyle="Italic" FontSize="10" Padding="5"></TextBlock>
                </StackPanel>
            <StackPanel Orientation="Vertical" Grid.Column="1">
                    <Label Padding="5,0" Margin="0,0,0,10" FontWeight="Bold">Gemeente:</Label>
                    <TextBox BorderBrush="LightBlue" Height="30" VerticalContentAlignment="Center"></TextBox>
                    <TextBlock Text="#666" FontStyle="Italic" FontSize="10" Padding="5"></TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
