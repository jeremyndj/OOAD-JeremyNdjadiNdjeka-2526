<Page x:Class="WpfLayoutUIOefenblad.Exercises.NotepadApp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfLayoutUIOefenblad.Exercises"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="NotepadApp">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="250px"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Frame x:Name="fraAssignment" Grid.Row="0" Grid.Column="0" Background="#eeeeee" />
        <Border Background="White" BorderBrush="#6B6CB0" BorderThickness="1" Grid.Row="1" Margin="10" Height="200" Width="600">
            <!-- TODO: PAS HIERONDER DE XAML AAN -->
            <DockPanel LastChildFill="True">
                <TabControl SelectedIndex="2" >
                    <TabItem Header="File" Margin="0" Padding="10,5">
                        <TextBox Padding="10">tab 1 content here...</TextBox>
                    </TabItem>
                    <TabItem  Header="Help" Margin="0" Padding="10,5">
                        <TextBox Padding="10">tab 2 content here...</TextBox>
                    </TabItem>
                </TabControl>
                <StatusBar DockPanel.Dock="Bottom">
                    <StatusBarItem Padding="10,5">
                        <TextBlock Text="all ready" FontSize="10" />
                    </StatusBarItem>
                </StatusBar>
                <Grid></Grid>
            </DockPanel>
        </Border>
    </Grid>
</Page>
